{% extends 'Admin/base.html.twig' %}

{% block currentPage %}homepage
{% endblock %}

{% block content %}
	<div class="panel panel-default multi-panel">
		<div class="panel-heading"></div>
		<div class="panel-body">
			<div class="col-md-12 main-menu">
				<div class="row placeholders">
					{% if is_granted('ROLE_SUPER_ADMIN') %}
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_alfa_orders')}}'">
								<h4>Alfa</h4>
								<div class="row">
									<div class="col-md-12">
										<ul class="list">
										<div class="TotalAmount">PostPaid</div>
											<li>
												<a class="TicketsCount" href="{{ path('admin_alfa_ordersPost') }}">PostPaid:
													{{alfa.postpaidcount}}</a>
											</li>
											<li>
												<div class="TotalAmount">Amount:
													{{alfa.postpaidsum}}</div>
											</li>
										</ul>
									</div>
									<div class="col-md-12">
										<ul class="list">
										<div class="TotalAmount">Prepaid</div>
											<li>
												<a class="TicketsCount" href="{{ path('admin_alfa_ordersPre') }}">PrePaid:
													{{alfa.prepaidcount}}</a>
											</li>
											<li>
												<div class="TotalAmount">Amount:
													{{alfa.prepaidsum}}</div>
											</li>

										</ul>
									</div>
								</div>
							</div>
						</div>
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_alfa_orders')}}'">
								<h4>Touch</h4>
								<div class="row">
									<div class="col-md-12">
										<ul class="list">
										<div class="TotalAmount">PostPaid</div>
											<li>
												<a class="TicketsCount" href="{{ path('admin_touch_ordersPost') }}">PostPaid:
													{{touch.postpaidcount}}</a>
											</li>
											<li>
												<div class="TotalAmount">Amount:
													{{touch.postpaidsum}}</div>
											</li>
										</ul>
									</div>
									<div class="col-md-12">
										<ul class="list">
										<div class="TotalAmount">Prepaid</div>
											<li>
												<a class="TicketsCount" href="{{ path('admin_touch_ordersPre') }}">PrePaid:
													{{touch.prepaidcount}}</a>
											</li>
											<li>
												<div class="TotalAmount">Amount:
													{{touch.prepaidsum}}</div>
											</li>

										</ul>
									</div>
								</div>
							</div>
						</div>
						<div class="col-xs-6 col-sm-4 placeholder text-center" onclick="location.href='/admin/orders'">
							<div class="dashborder">
								<h4>Loto</h4>
								<div class="TicketsCount">Purchased Grids:
									{{ loto.count }}</div>
									<div class="thismonth">
										<a href="{{path('admin_loto_lastdraw')}}">
											Last draw: {{ loto.lastdraw }}
										</a>
									</div>
								<div class="thismonth">This Month(purchased):
									{{ loto.thismonth }}</div>
								<div class="TicketsCount">
									{% for key,value in loto.resultArray %}
										<a href="/admin/orders?search_loto_form%5Bstatus%5D={{key}}&search_loto_form%5Bamount%5D=&search_loto_form%5Bsave%5D=">
											Orders
											{{key}}:{{value}}
										</a>
										<br>
									{% endfor %}
								</div>
								<div class="TotalAmount">Amount:
									{{ loto.TotalAmount }}</div>
							</div>

						</div>
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_ogero_orders')}}'">
								<h4>Ogero</h4>
								<div class="row">
									<div class="col-md-12">
										<ul class="list">
										<div class="TotalAmount">PostPaid</div>
											<li>
												<a class="TicketsCount">PostPaid:
													{{ogero.postpaidcount}}</a>
											</li>
											<li>
												<div class="TotalAmount">Amount:
													{{ogero.postpaidsum}}</div>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
						{# <div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_support')}}'">
								<h4>Support</h4>
								<div class="row">
									<div class="col-md-12">
												<div class="TicketsCount">Message/s:
													{{support.messageCount}}</div>
									</div>
								</div>
							</div>
						</div> #}
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_users')}}'">
								<h4>Users</h4>
							</div>
						</div>
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_payment_orders')}}'">
								<h4>Payment</h4>
								{% for key,value in payment.statusCount %}
									<a href="">
										Orders
										{{key}}:{{value}}
									</a>
									<br>
								{% endfor %}
							</div>
						</div>
						<div class="col-xs-6 col-sm-4 placeholder text-center">
							<div class="dashborder" onclick="window.location.href='{{path('admin_gift2games_orders_list')}}'">
								<h4>Gift 2 Games</h4>
									<a href="{{path('admin_gift2games_products')}}">
										Products
									</a>
									<br>
									<a href="{{path('admin_gift2games_categories')}}">Categories</a>
									<br><strong>Balance: </strong>{{ gift2gamesBalance }} USD
							</div>
						</div>

					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
