{% extends 'Admin/base.html.twig' %}

{% block content %}
    <h1>Photos</h1>
    <div class="mb-3">
        <a href="{{ path('admin_upload_questions_photo') }}" class="btn btn-primary">Add new Image</a>
    </div>
    <div class="photo-gallery">
        {% for photo in photos %}
            <div class="photo-item">
                {% if photo.image is not empty %}
                    <img src="{{ asset('images/questionsImages/' ~ photo.image) }}" alt="Category Image" width="50">
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}