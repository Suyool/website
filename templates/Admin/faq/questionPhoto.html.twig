{% extends 'Admin/base.html.twig' %}

{% block content %}
    <h1>Photos</h1>
    <div class="mb-3">
        <a href="{{ path('admin_upload_questions_photo') }}" class="btn btn-primary">Add new Image</a>
    </div>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Photos</h1>
        <div class="row">
            {% for photo in photos %}
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card border-0">
                        {% if photo.image is not empty %}
                            <a href="{{ asset('images/questionsImages/' ~ photo.image) }}">
                                <img src="{{ asset('images/questionsImages/' ~ photo.image) }}" alt="Category Image" class="card-img-top" style="height: 200px;">
                            </a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
