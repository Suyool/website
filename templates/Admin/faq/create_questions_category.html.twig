{% extends 'Admin/base.html.twig' %}

{% block title %}Admin Categories{% endblock %}

{% block content %}
    <h1>Admin Categories</h1>

    <div class="mb-3">
        {% if isNewCategory %}
            <h2>Create New Category</h2>
        {% else %}
            <h2>Edit Category</h2>
        {% endif %}
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">Upload</button>
    {{ form_end(form) }}

{% endblock %}
 