{% extends 'Admin/base.html.twig' %}

{% block currentPage %}Alfa{% endblock %}


{% block content  %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>SuyoolUser</th>
				<th>Status</th>
				{# <th>Subscription</th> #}
				<th>Amount</th>
				<th>TransId</th>
				<th>Currency</th>
				<th>Error</th>
				<th>Created</th>
			</tr>
		</thead>
		<tbody>

			{% for order in pagination  %}
				{# <a href="{{path('admin_loto_tickets',{'id':order.id})}}"> #}
				<tr class="pointer {% if order.redFlag is defined %} redFlag {% endif %}"  onclick="window.location.href='{{path('admin_alfa_logs',{'suyoolUserid':order.suyoolUserId})}}'">
                <td>{{ order.id }}{% if order.postpaid is not null %}(postpaid){% elseif (order.prepaid is not null) %}(prepaid){% endif %}</td>
					<td>{{ order.fname }} {{ order.lname }}</td>
					<td>{{ order.status }}</td>
					{# <td>{{ order.subscription }}</td> #}
					<td>{{ order.amount }}</td>
					<td>{{ order.transId }}</td>
					<td>{{ order.currency }}</td>
					<td>{{order.error}}</td>
					<td>{{ order.created|date("Y-m-d H:i:s") }}</td>
				</tr>
				{# </a> #}
			{% endfor %}

		</tbody>
	</table>
	<div class="navigation">
		{{ knp_pagination_render(pagination) }}
	</div>
	{% if pagination.getItems() == null %}
		<div class="orderEmpty">Order empty</div>
	{% endif %}
{% endblock %}
