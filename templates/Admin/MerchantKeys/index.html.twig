{% extends 'Admin/base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                <h1>Merchant Keys</h1>
            </div>
            <div class="col-2">
                <a href="{{ path('admin_merchantKey_create') }}" class="btn btn-primary">Create</a>
            </div>
        </div>

        {#filter#}
        <div class="col-5 my-2">
            <form action="{{ path('admin_merchant_keys') }}" method="get">
                <div class="container-fluid">
                    <div class="row">
                        <div class="form-group col-6 p-0">
                            <select name="merchant_id" id="merchant_id" class="form-control">
                                <option value="">All</option>
                                {% for merchant in merchants %}
                                    <option value="{{ merchant.id }}" {% if merchant.id == merchantId %}selected{% endif %}>{{ merchant.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <input type="submit" value="Filter" class="btn btn-primary">
                        </div>
                    </div>
                </div>


            </form>
        </div>



        {% for apiKey in apiKeys %}
            <div class="card m-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col">{{ apiKey.id }}</div>
                        <div class="col">{{ apiKey.merchant.name }}</div>
                        <div class="col">{{ apiKey.description }}</div>
                        <div class="col">{{ apiKey.expiryDate|date('Y-m-d H:i:s') }}</div>
                        <div class="col">{{ apiKey.status }}</div>

                        <div class="col">
                            <a href="{{ path('admin_merchantKey_delete', {'id': apiKey.id}) }}" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}