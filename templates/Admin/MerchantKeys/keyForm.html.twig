<form action="{{ path('admin_merchantKey_generate') }}" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-3">
                <label class="form-control-label">Description</label>
                <input class="form-control" type="text" name="description" required="required" value="" />
            </div>
            <div class="form-group m-3">
                <label class="form-control-label">Merchant Id</label>
                <select class="form-control" name="merchant_id" required="required">
                    <option value="">Select Merchant</option>
                    {% for merchant in merchants %}
                        <option value="{{ merchant.id }}">{{ merchant.name }}</option>
                    {% endfor %}
                </select>

            </div>
            <div class="form-group m-3">
                <label class="form-control-label">White Listed Ips</label>
                <input class="form-control" type="text" name="whitelisted_ips" required="required" value="" />
            </div>
            <div class="form-group m-3">
                <label class="form-control-label">Expiry Date</label>
                <input class="form-control" type="date" name="expiry_date" required="required" value="" />
            </div>
            <div class="form-group m-3">
                <button type="submit" class="btn btn-primary">Generate</button>
            </div>
        </div>
    </div>
</form>

