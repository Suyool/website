{% extends 'Admin/base.html.twig' %}

{% block title %}
    {{ '_LOGIN_AUTHENTICATION_SENT_EMAIL_'|trans({},'admin')|raw }}
{% endblock %}

{% block currentPage %}login{% endblock %}

{% block content %}
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="panel card p-4">
            <div class="panel-heading">
                <h3 class="text-center">Two Factor Authentication</h3>
            </div>
            <div class="text-center">
                <i class="fa-solid fa-shield fa-4x mb-3"></i> {# Added margin-bottom for spacing #}

                <form class="form" action="{{ checkPathUrl ? checkPathUrl : path(checkPathRoute) }}" method="post">
                    <div class="form-group mb-3"> {# Added margin-bottom for spacing #}
                        <input id="_auth_code" type="text" name="{{ authCodeParameterName }}" class="form-control" autocomplete="one-time-code" autofocus>
                    </div>

                    {% if displayTrustedOption %}
                        <div class="form-check mb-3">
                            <input id="_trusted" type="checkbox" name="{{ trustedParameterName }}" class="form-check-input">
                            <label class="form-check-label" for="_trusted">{{ "trusted"|trans({}, 'SchebTwoFactorBundle') }}</label>
                        </div>
                    {% endif %}
                    {% if isCsrfProtectionEnabled %}
                        <input type="hidden" name="{{ csrfParameterName }}" value="{{ csrf_token(csrfTokenId) }}">
                    {% endif %}

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-info">Submit</button>
                        <button class="btn btn-primary send-code-sms">
                            Send SMS {# Removed comment #}
                            <span class="resend-counter ms-2">20</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
