{% extends 'Admin/base.html.twig' %}

{% block title %}Admin Categories{% endblock %}

{% block content %}
    <h1>Admin Categories</h1>

    <div class="mb-3">
        {% if isNewCategory %}
            <h2>Create New Category</h2>
        {% else %}
            <h2>Edit Category</h2>
        {% endif %}
    </div>

    <form method="post">
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
{% endblock %}
