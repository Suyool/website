<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}" sizes="128x128">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

    {% block stylesheets %}
        {% for file in encore_entry_css_files('admin') %}
            <link rel="stylesheet" href="{{ asset(file|substr(1)) }}">
        {% endfor %}
    {% endblock %}
</head>
<body data-page="{% block currentPage %}{% endblock %}">
<div class="row">
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {{ include("Admin/base/sidebar.html.twig") }}
    <div class="col-md-10 admin-pages-content">
        {% else %}
        <div class="authentication-form">
    {% endif %}
    <div class="col pt-5">
        <div class="container-fluid">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>

<div class="container-fluid main-container">

    </div>
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" ></script>

        {% for file in encore_entry_js_files('admin-app') %}
            <script src="{{ asset(file|substr(1)) }}"></script>
        {% endfor %}
    {% endblock %}
</body>
