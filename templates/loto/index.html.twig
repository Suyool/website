<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
		{% block stylesheets %}
			{% for file in encore_entry_css_files('react_styles') %}
				<link rel="stylesheet" href="{{ asset(file|substr(1)) }}">
			{% endfor %}
		{% endblock %}
		<title>Loto</title>
	</head>
	<body class="loto">
		<div id="loto" data-data="{{ parameters|json_encode }}"></div>
	</body>
	<script>
		var xhr = new XMLHttpRequest();

xhr.open('GET', '/loto', true);

xhr.onreadystatechange = function () {
if (xhr.readyState === 4 && xhr.status === 200) {
var response = JSON.parse(xhr.responseText);
var lotoElement = document.getElementById('loto');
lotoElement.setAttribute('data-data', JSON.stringify(response));
}
};

xhr.onerror = function () {
console.error('An error occurred while making the request.');
};

xhr.send();
	</script>
	{% block javascripts %}
		{% for file in encore_entry_js_files('app2') %}
			<script src="{{ asset(file|substr(1)) }}"></script>
		{% endfor %}
	{% endblock %}
</html>
