<div class="InfoSection">
    <div class="container">
        <div class="row">
            <div class="easy_steps_top">{{ infoSection.title }}</div>
            {% for item in infoSection.items %}
                <div class="col-md-4 MasterCard">
                    <img src="{{ asset(item.image) }}" alt="">
                    <div class="desc">{{ item.description }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>