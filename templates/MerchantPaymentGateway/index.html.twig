{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <div class="container mt-5 payment-gateway-cont">
        <div class="payment-content">
            <div class="mb-4">
                <div class="d-flex align-items-center">
                    <img src="{{ asset('build/images/suyoolPaymentLogo.png') }}" alt="Suyool Logo" width="40" class="mr-3">
                    <h3 class="card-title ps-2 text-start">Pay with Suyool</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="{% if is_mobile %}{{ path('app_pay_suyool_mobile') }}{% else %}{{ path('app_pay_suyool_qr') }}{% endif %}">
                        <div class="card text-center mb-4">
                            <div class="card-body d-flex align-items-center">
                                <img src="{{ asset('build/images/qrPayLogo.svg') }}" alt="QR Payment" width="60" class="mr-3">
                                <div class="ps-3 text-start">
                                    <h5 class="card-title">Pay with Suyool App</h5>
                                    <p class="card-text">Enroll to Suyool & pay using Suyool QR payment tool seamlessly</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col-md-12">
                    <a href="{{ path('app_paymentGateway') }}">
                        <div class="card text-center mb-4">
                            <div class="card-body d-flex align-items-center">
                                <img src="{{ asset('build/images/cardPaymentLogo.svg') }}" alt="Card Payment" width="60" class="mr-3">
                                <div class="ps-3 text-start">
                                    <h5 class="card-title">Pay online by card</h5>
                                    <p class="card-text">Pay online with any debit or credit card, local or international.</p>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
