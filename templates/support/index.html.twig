{% extends 'base.html.twig' %}
{% block body %}

    <div class="white-navbar container-fluid">
        {% include 'elements/header-v2.html.twig' %}
    </div>
    <div class="supportBody">
        {% include 'support/top-section.html.twig' %}
        {% include 'support/modal.html.twig' %}

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="formMain container">
                        <div class="formTitle">Get in touch</div>
                        <div class="formText">Please fill in this form and we’ll respond within 1-3 business days.</div>

                        {{ form_start(form) }}

                        <div class="form-card">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="form-card">
                            {{ form_row(form.phoneNumber) }}
                        </div>
                        <div class="form-card">
                            {{ form_row(form.mail, { 'label': 'E-mail address' }) }}
                        </div>

                        <div class="form-card">
                            {{ form_row(form.message) }}
                        </div>

                        <div class="btn-wrap">
                            <button type="submit" class="btn button-primary crtAcc">Message Us</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="contact-info">
                        <div class="title">Contact Information</div>
                        <div class="info">
                            <img src="{{asset('build/images/phone-icons.svg')}}" alt="">
                            <span class="contact-text">Call us: +961 81 484 000</span>
                        </div>
                        <div class="info">
                            <img src="{{asset('build/images/email-icon.svg')}}" alt="">
                            <span class="contact-text">Email us: <a href="" class="ms-2"> contact@suyool.com</a></span>
                        </div>
                        <div class="info">
                            <img src="{{asset('build/images/suyool-small-icon.svg')}}" alt="">
                            <span class="contact-text">Message us: via SUYOOL’s application</span>
                        </div>
                        <div class="info">
                            <img src="{{asset('build/images/call-center-icon.svg')}}" alt="">
                            <span class="contact-text">Find answers: <a href="/{{ path('help_center') }}" class="ms-2">Visit our help center</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

            {% include 'support/modal.html.twig' %}
    {% include 'elements/footer.html.twig' %}

{% endblock %}
