{% extends 'base.html.twig' %}

{% block currentPage %}homepage{% endblock %}

{% block body %}
    <div class="panel">
        <!-- Default panel contents -->
        <div class="panel-heading header-form">
            <h3>Rate History</h3>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>

        <table class="table table-striped rate-history-table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Buy Rate</th>
                <th>Sell Rate</th>
                <th>Direction</th>
                <th>Creator</th>
            </tr>
            </thead>
            <tbody>
            {% if not rateHistory is empty %}
                {% for rate in rateHistory %}
                    <tr>
                        <td>{{ rate.displayDate() }}</td>
                        <td>{{ rate.displayTime() }}</td>
                        <td>{{ rate.buyRate }}</td>
                        <td>{{ rate.sellRate }}</td>
                        <td><span class="rateDirection glyphicon {{ rate.displayDirection() }}"></span></td>
                        <td>{{ rate.creatorData.name }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    {#<div style="margin: 0 0 16px">
        <input type="hidden" id="query" value="{query}">
        <input type="button" class="button" id="exportToCSV" value="Export to CSV">
    </div>#}
{% endblock %}