{% extends 'base.html.twig' %}
{% block body %}
    <div class="homepage maTbanikCard">
        <div class="top-section container-fluid">
            {% include 'elements/header-v2.html.twig' %}
            <div class="top-container">
                <div class="left-section">
                    <h1 class="header-text">
                        Use Suyool Visa Card
                    </h1>
                    <p>In Lebanon & abroad, in-store & online</p>
                    <div class="buttons-cont desktopMode">
                        <button class="btn button-primary mr-5" data-bs-toggle="modal" data-bs-target="#DownloadAppCARD"
                                id="openSuyoolAccount">Get The Card
                        </button>
                    </div>
                    <div class="buttons-cont mobileMode">
                        <button class="btn button-primary mr-5 OpenYourSuyoolAccount" id="openSuyoolAccount"
                                onclick='googleFacebookEvents("visaCard", "Get The Card", "Top Section")'>Get The Card
                        </button>
                    </div>
                </div>
                <div class="right-section">
                    <div class="img-contt">
                        <img class="maTbanik" src="{{ asset('build/images/maTbanik.svg') }}">
                        <img class="maTbanikCard" src="{{ asset('build/images/ma-tbank/top-image.png') }}">
                    </div>
                </div>
            </div>
        </div>
        <div class="mobileCardImage">
            <img class="maTbanikCard2" src="{{ asset('build/images/maTbanikCard.png') }}">
        </div>

        <div class="mb-5">
            {% include 'ma-tBank-card/threeBoxTemplate.html.twig' %}
            {% include 'ma-tBank-card/threeEasySteps.html.twig' %}
            {% set buttonName = 'Explore Exclusive Privileges' %}
            {% include 'homepage/home-visa.html.twig' with {'buttonName': buttonName} %}
            {% include 'ma-tBank-card/backgroundSection.html.twig' %}
            {% include 'elements/faq/faqSuyool.html.twig' %}
            {% include 'elements/get-suyool-visa.html.twig' %}

        </div>


        {% include 'elements/footer.html.twig' %}
    </div>

{% endblock %}
