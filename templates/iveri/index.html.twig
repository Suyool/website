{% extends 'base.html.twig' %}

{% block body %}
	{% if status is not defined %}

		<div class="loaderTopUp">
			<div class="desktopMode desktop-logo">
				<img src="{{asset('build/images/payment/nonsuyooler-flow-suyool-cover-desktop.svg')}}" alt="" class="topiveri">
				
			</div>
			{% if topup is  defined and topup == "true" %}
				<div class="mobheader">
					<div class="back">
						<img src="{{ asset('/build/images/Loto/Back.png') }}" alt="">
					</div>
					<div class="topup">Top Up</div>
					<div></div>
				</div>
			{% endif %}
			<img src="{{ asset('/build/images/loaderSuyool2.gif') }}" alt="">
			
			<div id="submitTopUp">
				<button class="continueBtn">Continue</button>
			</div>
		</div>
		{% include 'iveri/hiddenForm.html.twig' %}
	{% else %}
		
		<div class="entireBody">
			<div class="desktopMode desktop-logo">
				<img src="{{asset('build/images/payment/nonsuyooler-flow-suyool-cover-desktop.svg')}}" alt="" class="topiveri" width="100%">
			</div>
			<div class="popup">
				<div class="image">
					<img src="{{ asset(imgsrc) }}" alt="">
				</div>
				<div class="title">
					{{title}}
				</div>
				<div class="desc">
					{{description|raw}}
				</div>
				<div class="button">
					<button class="action {% if infoSuccess == true %}actionAppSuccess{% elseif infoFailed == true %}actionAppFailed{% else %}actionBrowser{% endif %}" >{% if redirect is defined and redirect is not null %}<a href="{{app.request.schemeAndHttpHost}}/{{redirect}}">{{button}}</a>{% else %}{{button}}{% endif %}</button>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
