{% extends 'base.html.twig' %}

{% block body %}
	{% if status is not defined %}

		<div class="loaderTopUp">
			{% if topup is  defined and topup == "true" %}
				<div class="mobheader">
					<div class="back">
						<img src="{{ asset('/build/images/Loto/Back.png') }}" alt="">
					</div>
					<div class="topup">Top Up</div>
					<div></div>
				</div>
			{% endif %}
			<img src="{{ asset('/build/images/loaderSuyool2.gif') }}" alt="">
			
			<div id="submitTopUp">
				<button class="continueBtn">Continue</button>
			</div>
		</div>
		{% include 'iveri/hiddenForm.html.twig' %}
	{% else %}
		<div class="entireBody">
			<div class="popup">
				<div class="image">
					<img src="{{ asset(imgsrc) }}" alt="">
				</div>
				<div class="title">
					{{title}}
				</div>
				<div class="desc">
					{{description|raw}}
				</div>
				<div class="button">
					<button class="action {% if info == true %}actionApp{% else %}actionBrowser{% endif %}">{{button}}</button>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}
